{
  "[markdown]": {
    "editor.formatOnSave": true,
  },
  "[python]": {
    "editor.formatOnSave": true
  },
  "python.defaultInterpreterPath": "${workspaceFolder}/minionenv/bin/python",
  "cSpell.words": [
    "aruco",
    "denoise",
    "Denoising",
    "fpdf",
    "imageai",
    "imread",
    "imshow",
    "imutils",
    "imwrite",
    "integtest",
    "jsonpickle",
    "mosquitto",
    "MQTT",
    "ndarray",
    "pathfile",
    "petminion",
    "platformdirs",
    "simcamera",
    "simsocialmedia",
    "squareish",
    "systime",
    "trainingrule",
    "xwindows"
  ],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "python.testing.pytestArgs": [
    "tests",
    "-m",
    "not social",
    "-r",
    "fEP" // Show stdout for failed and passed tests
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
}