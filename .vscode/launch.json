{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simulated Petminion",
            "type": "python",
            "request": "launch",
            "module": "petminion",
            "python": "${workspaceFolder}/minionenv/bin/python",
            "justMyCode": false,
            "args": [
                "--debug",
                "--simulate"
            ]
        },
        {
            "name": "Production Petminion",
            "type": "python",
            "request": "launch",
            "module": "petminion",
            "python": "${workspaceFolder}/minionenv/bin/python",
            "justMyCode": false,
            "args": [
                "--debug"
            ]
        },
        {
            "name": "Run Current Python File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "python": "${workspaceFolder}/minionenv/bin/python",
            "justMyCode": false
        },
        {
            "name": "Pantone experiment",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/pantone/pantone.py",
            "python": "${workspaceFolder}/minionenv/bin/python",
            "args": [
                "--reference",
                "${workspaceFolder}/tests/image/ref-pantone.jpg",
                "--input",
                "${workspaceFolder}/tests/image/test-pantone.jpg",
                "--view"
            ]
        }
    ]
}