    "version": "0.2.0",
    "configurations": [
        {
            "name": "Simulated Petminion",
            "type": "python",
            "request": "launch",
            "module": "petminion",
            // use our virtualenv
            "python": "${workspaceFolder}/minionenv/bin/python",
            "justMyCode": true,
            "args": [
                "--debug",
                "--simulate"
            ]
        },
        {
            "name": "Production Petminion",
            "type": "python",
            "request": "launch",
            "module": "petminion",
            // use our virtualenv
            "python": "${workspaceFolder}/minionenv/bin/python",
            "justMyCode": true,
            "args": [
                "--debug"
            ]
        },
        {
            "name": "Run Current Python File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            // use our virtualenv
            "python": "${workspaceFolder}/minionenv/bin/python",
            "justMyCode": true
        }
    ]
}